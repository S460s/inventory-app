extends ../layouts/header.pug

block content 
  .section.pt-4.pb-0
    nav.breadcrumb.has-arrow-separator
      ul.container
        li
          a(href='/').has-text-grey Home 
        li
          a(href='/category/list').has-text-grey Categories
        li
          a(href='/category/' + category._id).has-text-grey #{category.name} 
        li.is-active
          a Delete #{item.name}

  .box
    form(action=`${item.url}/delete`, method="post")
      .field.mt-2
        label.label(for='password') Password
        .control
          input.input( required name='password' id='password' type='password' placeholder='test123') 
          p.mt-2 To delete item #{item.name} you need to enter your password.
          
      button.button.is-danger Delete

  if errors
    #errMsg.section.is-centered
      article.message.is-danger
        .message-header 
          p Errors
          button#closeBtn.delete
        .message-body 
          ul
            for error in errors
              li!= error.msg
                 
    script(src="../../scripts/errorMsg.js") 